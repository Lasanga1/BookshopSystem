<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    
    <display-name>Pahan Edu Book Shop</display-name>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    
    <!-- Login Servlet -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.pahanedu.bookshop.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    
    <!-- Logout Servlet -->
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.pahanedu.bookshop.servlet.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    
    <!-- Admin Servlets -->
    <servlet>
        <servlet-name>AdminBookServlet</servlet-name>
        <servlet-class>com.pahanedu.bookshop.servlet.admin.AdminBookServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminBookServlet</servlet-name>
        <url-pattern>/admin/books</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>AdminUserServlet</servlet-name>
        <servlet-class>com.pahanedu.bookshop.servlet.admin.AdminUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminUserServlet</servlet-name>
        <url-pattern>/admin/users</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>AdminBillServlet</servlet-name>
        <servlet-class>com.pahanedu.bookshop.servlet.admin.AdminBillServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminBillServlet</servlet-name>
        <url-pattern>/admin/bills</url-pattern>
    </servlet-mapping>
    
    <!-- Cashier Servlets -->
    <servlet>
        <servlet-name>CashierCustomerServlet</servlet-name>
        <servlet-class>com.pahanedu.bookshop.servlet.cashier.CashierCustomerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CashierCustomerServlet</servlet-name>
        <url-pattern>/cashier/customers</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>CashierBillServlet</servlet-name>
        <servlet-class>com.pahanedu.bookshop.servlet.cashier.CashierBillServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CashierBillServlet</servlet-name>
        <url-pattern>/cashier/bills</url-pattern>
    </servlet-mapping>
    
    <!-- Session timeout (30 minutes) -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
</web-app>